<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="clr-namespace:ViewModel.ViewModels.Modals;assembly=ViewModel"
             x:Class="View.Views.Modals.AddView"
			 x:DataType="vm:AddViewModel">
	<Design.DataContext>
		<vm:AddViewModel />
	</Design.DataContext>
	<Grid RowDefinitions="*, Auto">
		<ContentControl Content="{Binding Value}" ContentTemplate="{StaticResource TaskTemplate}"/>
		<WrapPanel Grid.Row="1">
			<Button Content="OK" Command="{Binding OkCommand}"/>
			<Button Content="Cancel" Command="{Binding CancelCommand}"/>
		</WrapPanel>
	</Grid>
</UserControl>
